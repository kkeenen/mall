<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sgc.serviceproduct.mapper.CategoryMapper">

    <resultMap id="BaseResultMap" type="com.sgc.serviceproduct.entity.Category">
            <id property="catId" column="cat_id" jdbcType="BIGINT"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="parentCid" column="parent_cid" jdbcType="BIGINT"/>
            <result property="catLevel" column="cat_level" jdbcType="INTEGER"/>
            <result property="productCount" column="product_count" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        cat_id,name,parent_cid,
        cat_level,product_count
    </sql>
    <delete id="removeByCatId">
        delete from p_category where cat_id = #{catId}
    </delete>


</mapper>
